{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@liyana/ui": [
        "../../packages/ui"
      ]
    },
    "strict": false,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
